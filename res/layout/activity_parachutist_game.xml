<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game_parachutist"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
            android:id="@+id/imgParachutistGamePlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_plane_pencil" />
    
    <LinearLayout
        android:id="@+id/layoutParachutistLife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imgHeart1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imgHeart2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imgHeart3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imgHeart4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_heart_full" />

            <ImageView
                android:id="@+id/imgHeart5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_heart_full" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="3" >
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_weight="97"
                    android:src="@drawable/btn_downward_game" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtCorrectWord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/word"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIncorrectWord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/word"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/zero"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgParachutistGameWave11"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_game_parachutist_wave_1" >
        </ImageView>

        <ImageView
            android:id="@+id/imgParachutistGameWave12"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_game_parachutist_wave_1" >
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/layoutParachutistLife" >

        <RelativeLayout
            android:id="@+id/linearLayoutSoldier1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgSoldier1"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_soldier_pencil"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txtLetter1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/letter"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayoutSoldier2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgSoldier2"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_soldier_pencil"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txtLetter2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/letter"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayoutSoldier3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgSoldier3"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_soldier_pencil"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txtLetter3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/letter"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayoutSoldier4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgSoldier4"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_soldier_pencil"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txtLetter4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/letter"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayoutSoldier5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgSoldier5"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_soldier_pencil"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txtLetter5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/letter"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgParachutistGameShark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtTime"
            android:background="@drawable/ic_shark_pencil" />
        
        <ImageView
            android:id="@+id/imgParachutistGameWave2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_game_parachutist_wave_2" >
        </ImageView>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@color/white" />

    </RelativeLayout>

</RelativeLayout>